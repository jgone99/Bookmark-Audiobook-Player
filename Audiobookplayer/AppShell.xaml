<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Audiobookplayer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Audiobookplayer.Pages"
    Title="Audiobookplayer">

    <TabBar>
        <ShellContent 
            ContentTemplate="{DataTemplate local:LibraryPage}"
            Title="Library"
            Route="LibraryTab"
            Icon="library.svg" />

        <ShellContent 
            ContentTemplate="{DataTemplate local:PlayerPage}" 
            Title="Player"
            Route="PlayerTab"/>
        
        <ShellContent 
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Title="Settings"
            Route="SettingsTab"/>
    </TabBar>

</Shell>
